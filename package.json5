{
	name: 'obs-stream-sync',
	version: '0.3.0',
	description: 'A Node.js app that reads QR codes off livestreams, and sets delays accordingly.',
	main: 'dist/src/index.js',
	bin: 'dist/src/index.js', // Used with pkg
	author: 'some1chan',
	license: 'MIT',
	private: 'true',
	scripts: {
		/**
		 * This project is commitizen friendly!
		 * Use `pnpm cz` for formatting your commits.
		 */
		commit: 'cz',
		// Run the test for this project.
		test: 'ava',
		'test:watch': 'ava --watch',
		/**
		 * Build helpers, including commands to build an executable.
		 * To make an executable, run `pnpm build` first, then run `pnpm build:pkg`
		 */
		build: 'tsc --build',
		'build:watch': 'tsc --build --watch',
		'build:pkg-dev': 'pnpm exec pkg -o ./obs-stream-sync -t node18-win-x64 package.json',
		'build:pkg': 'pnpm exec pkg -C GZip -o ./dist/obs-stream-sync package.json',
		/**
		 * Run the application after running the build command.
		 * Alternatively, use `pnpm dev` instead.
		 */
		start: 'node dist/src/index.js',
		/**
		 * The preferred way to develop and run the application,
		 * if the application isn't made into an executable.
		 * `dev:start` is included for testing with terminal interactivity.
		 */
		dev: 'cross-env NODE_ENV=development tsnd --trace-warnings --respawn --transpile-only -- ./src/index.ts',
		'dev:start': 'nodemon -I dist/src/index.js',
	},
	ava: {
		extensions: ['ts'],
		environmentVariables: {
			TS_NODE_LOG_ERROR: 'false',
		},
		require: ['ts-node/register'],
	},
	pkg: {
		assets: ['assets/**/*', 'package.json'],
		targets: [
			'node18-win-x64',
			'node18-linuxstatic-x64',
			'node18-macos-x64',
		],
	},
	devDependencies: {
		// Pushing out versioning
		'@changesets/cli': '^2.26.2',
		// Types for proper TypeScript integration
		'@types/common-tags': '^1.8.1',
		// Node.js types so built-in packages from Node.js won't complain
		'@types/node': '^18.17.1',
		// Handles testing
		ava: '^5.3.1',
		// Commit formatting with `pnpm cz`
		commitizen: '^4.3.0',
		// Sets NODE_ENV on all platforms correctly on `pnpm dev`
		'cross-env': '^7.0.3',
		// Used for debugging weird behavior with interactive CLI
		nodemon: '^2.0.22',
		// Creates an executable
		pkg: '^5.8.1',
		// Testing with .ts files for ava
		'ts-node': '^10.9.1',
		// Used for `pnpm dev` for testing
		'ts-node-dev': '^2.0.0',
		// Explicit types in scripts
		typescript: '^5.1.6',
	},
	dependencies: {
		// Fancy colors in the terminal
		'ansi-colors': '^4.1.3',
		// For writing strings that won't go over the 80 character limit, like this string here
		'common-tags': '^1.8.2',
		// Version checking for OBS Websocket
		'compare-versions': '6.0.0-rc.1',
		// configparser from Python, used for config.ini
		configparser: '^0.3.10',
		// Screenshot string parsing
		dayjs: '^1.11.9',
		// Interactive commandline input
		enquirer: '^2.3.6',
		// Image processor
		jimp: '^0.17.10',
		// QR Code reader
		jsqr: '^1.4.0',
		// Math expressions when inputting math expressions
		mathjs: '^11.9.1',
		// Connects and controls OBS
		'obs-websocket-js': '^5.0.3',
	},
	engines: {
		// >17 required for interactivity
		node: '>17',
		// Repo is currently v8, (non-p)npm won't work.
		pnpm: '>=8',
	},
	config: {
		commitizen: {
			path: './node_modules/cz-conventional-changelog',
		},
	},
}
